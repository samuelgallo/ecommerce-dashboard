<%- include('../partials/head'); -%>
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<div class="container-fluid">
  <div class="row">
    <%- include('../partials/sidebar'); -%>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <%- include('../partials/header'); -%>

      <% if(user&&user.role == 'admin' || user&&user.role == 'analyst'){ %>
      <div class="row">
        <div class="col-12">
          <div class="welcome">
            <h1>Upload Products</h1>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12 col-md-6">
          <form method="POST" action="/dashboard/products/upload"  enctype="multipart/form-data">
            
            <div class="form-group row">
              <label for="upload" class="col-sm-12 col-form-label">File</label>
              <div class="col-sm-12">
                <input type="file" id="upload" name="upload" accept="*.csv">
              </div>
            </div>

            <div class="form-group row mt-5">
              <div class="col-sm-12">
                <button type="submit" class="btn btn-primary"><span data-feather="save"></span> Upload</button>
              </div>
            </div>

          </form>
        </div>
      </div>
      <% } else { %>
        <p>You are not allowed to view or edit this page!</p>
      <% } %>

      <%- include('../partials/copyright'); -%>

    </main>
  </div>
</div>

<%- include('../partials/footer'); -%>
